<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme.
    Theme.AppCompat.DayNight.NoActionBar
    Theme.MaterialComponents.DayNight.NoActionBar
     -->

    <style name="Theme.DayNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bgColorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <!--底部导航栏-->
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <!--阴影边界-->
        <item name="android:outlineProvider">background</item>

        <!-- Primary brand color. -->
        <!--appBar背景颜色-->
        <item name="colorPrimary">@color/bgColorPrimary</item>
        <!--控件选中时的颜色-->
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:textAllCaps">false</item>
        <!--ToolBar上的Title颜色-->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!-- 文本颜色 -->
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <!-- TabLayout 文本选中颜色 -->
        <item name="tabSelectedTextColor">@color/textColorPrimary</item>


        <item name="colorControlHighlight">@color/colorRipple</item>
        <item name="android:editTextColor">@color/textColorPrimary</item>

        <!--确定按钮样式-->
        <item name="buttonBarPositiveButtonStyle">@style/positiveBtnStyle</item>
        <!--取消按钮样式-->
        <item name="buttonBarNegativeButtonStyle">@style/negativeBtnstyle</item>

    </style>

    <style name="Theme.DayNight.NoActionBar">

    </style>

    <style name="Theme.DayNight.Splash">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
    </style>

    <!--确定按钮样式-->
    <style name="positiveBtnStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <!--取消按钮样式-->
    <style name="negativeBtnstyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>



</resources>